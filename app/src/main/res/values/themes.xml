<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BPMnow" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/neon_purple</item>
        <item name="colorPrimaryDark">@color/neon_purple_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/neon_purple_muted</item>
        <item name="colorOnPrimaryContainer">@color/neon_purple_light</item>

        <item name="colorSecondary">@color/neon_cyan</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/neon_cyan_muted</item>
        <item name="colorOnSecondaryContainer">@color/neon_cyan_light</item>

        <item name="colorTertiary">@color/neon_magenta</item>
        <item name="colorOnTertiary">@color/on_primary</item>
        <item name="colorTertiaryContainer">@color/neon_magenta_muted</item>
        <item name="colorOnTertiaryContainer">@color/neon_magenta_light</item>

        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_card</item>
        <item name="colorSurfaceVariant">@color/surface_card_elevated</item>
        <item name="colorOnSurface">@color/on_background</item>
        <item name="colorOnSurfaceVariant">@color/on_background_secondary</item>

        <item name="colorError">@color/neon_magenta</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_background_secondary</item>
        <item name="android:textColorHint">@color/on_background_tertiary</item>
    </style>

    <style name="Theme.BPMnow" parent="Base.Theme.BPMnow" />


    <!-- Neon Button Styles -->
    <style name="Widget.BPMnow.Button.Neon" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/neon_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.BPMnow.Button.NeonOutline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/neon_cyan</item>
        <item name="android:textColor">@color/neon_cyan</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Input Style -->
    <style name="Widget.BPMnow.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/neon_purple</item>
        <item name="hintTextColor">@color/neon_purple_light</item>
        <item name="boxBackgroundColor">@color/surface_input</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.BPMnow.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_card_elevated</item>
        <item name="chipStrokeColor">@color/neon_cyan</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/neon_cyan</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="checkedIconTint">@color/neon_cyan</item>
    </style>

    <!--    Form Circle ImageView Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>